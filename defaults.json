{
    "empty": {
        "version": 1,
        "allow_edit": true,
        "plugins": [],
        "style": {
            "portal" : {
                    "background" : "#1F3845",
                    "fontFamily" : "\"Lucida Sans Unicode\", \"Lucida Grande\", sans-serif"
                },
            "panes"  : {
                    "backgroundColor"                 : "#2a2a2a",
                    "border"                          : "thin solid #2a2a2a",
                    "headingHeight"                   : "30px",
                    "primaryHeadingBackgroundColor"   : "#607D8B",
                    "primaryHeadingFontSize"          : "16px",
                    "primaryHeadingTextColor"         : "#FFFFFF",
                    "secondaryHeadingBackgroundColor" : "#263238",
                    "secondaryHeadingFontSize"        : "16px",
                    "secondaryHeadingTextColor"       : "#FFFFFF"
                },
            "widgets": {
                    "background"        : "transparent",
                    "blockSize"         : "60",
                    "bodyFontSize"      : "12px",
                    "bodyTextColor"     : "#FFFFFF",
                    "border"            : "thin solid transparent",
                    "headingFontSize"   : "18px",
                    "headingFontWeight" : "400",
                    "headingTextColor"  : "#5EA7CF"
                },
            "forms"  : {
                    "numberInputBackgroundColor": "",
                    "numberInputTextColor"      : "",
                    "textInputBackgroundColor"  : "",
                    "textInputTextColor"        : ""
                }
        },
        "panes": [{
            "title": "Empty Dashboard",
            "width": 1,
            "row": {
                "3": 1
            },
            "col": {
                "3": 1
            },
            "display_header" : false,
            "header_theme" : "primary",
            "col_width": "3",
            "widgets": [{
                "type": "text_widget",
                "settings": {
                    "size": "regular",
                    "value": "Dashboard Name",
                    "animate": true
                }
            }]
        }],
        "datasources": [],
        "columns": 3
    },
    "factory": {
        "version": 1,
        "allow_edit": true,
        "plugins": [],
        "style": {
            "portal" : {
                    "background" : "#1F3845",
                    "fontFamily" : "\"Lucida Sans Unicode\", \"Lucida Grande\", sans-serif"
                },
            "panes"  : {
                    "backgroundColor"                 : "#2a2a2a",
                    "border"                          : "thin solid #2a2a2a",
                    "headingHeight"                   : "30px",
                    "primaryHeadingBackgroundColor"   : "#607D8B",
                    "primaryHeadingFontSize"          : "16px",
                    "primaryHeadingTextColor"         : "#FFFFFF",
                    "secondaryHeadingBackgroundColor" : "#263238",
                    "secondaryHeadingFontSize"        : "16px",
                    "secondaryHeadingTextColor"       : "#FFFFFF"
                },
            "widgets": {
                    "background"        : "transparent",
                    "blockSize"         : "60",
                    "bodyFontSize"      : "12px",
                    "bodyTextColor"     : "#FFFFFF",
                    "border"            : "thin solid transparent",
                    "headingFontSize"   : "18px",
                    "headingFontWeight" : "400",
                    "headingTextColor"  : "#5EA7CF"
                },
            "forms"  : {
                    "numberInputBackgroundColor": "",
                    "numberInputTextColor"      : "",
                    "textInputBackgroundColor"  : "",
                    "textInputTextColor"        : ""
                }
        },
        "panes": [{
            "title": "Factory Dashboard",
            "width": 1,
            "row": {
                "3": 1
            },
            "col": {
                "3": 1
            },
            "col_width": "3",
            "widgets": [{
                "type": "text_widget",
                "settings": {
                    "title": "Omaha Factory",
                    "size": "regular",
                    "value": "Control Room  1",
                    "animate": true
                }
            }]
        }, {
            "title": "Dial",
            "width": 1,
            "row": {
                "3": 5,
                "5": 5
            },
            "col": {
                "3": 1,
                "5": 1
            },
            "display_header" : false,
            "header_theme" : "primary",
            "col_width": 1,
            "widgets": [{
                "type": "dial_widget",
                "settings": {
                    "dial_name": "Cooler Speed Controller",
                    "topic_name": "JSON.parse(datasources[\"dialMessageTopic\"])",
                    "device_id": "dial1"
                }
            }]
        }, {
            "title": "Mobile",
            "width": 1,
            "row": {
                "3": 5,
                "5": 5
            },
            "col": {
                "3": 2,
                "5": 2
            },
            "col_width": 1,
            "widgets": [{
                "type": "simple_button",
                "settings": {
                    "buttonLabel": "High",
                    "inputDataSource": "datasources[\"mobileMessageTopic\"]",
                    "targetDataSource": "datasources[\"mobileMessageTopic\"]",
                    "size": "regular"
                }
            }, {
                "type": "simple_button",
                "settings": {
                    "buttonLabel": "Medium",
                    "inputDataSource": "datasources[\"mobileMessageTopic\"]",
                    "targetDataSource": "datasources[\"mobileMessageTopic\"]",
                    "size": "regular"
                }
            }, {
                "type": "simple_button",
                "settings": {
                    "buttonLabel": "Low",
                    "inputDataSource": "datasources[\"mobileMessageTopic\"]",
                    "targetDataSource": "datasources[\"mobileMessageTopic\"]",
                    "size": "regular"
                }
            }, {
                "type": "simple_button",
                "settings": {
                    "buttonLabel": "Off",
                    "inputDataSource": "datasources[\"mobileMessageTopic\"]",
                    "targetDataSource": "datasources[\"mobileMessageTopic\"]",
                    "size": "regular"
                }
            }]
        }, {
            "title": "Temperature Indicator",
            "width": 1,
            "row": {
                "3": 5,
                "5": 5
            },
            "col": {
                "3": 3,
                "5": 3
            },
            "col_width": 1,
            "widgets": [{
                "type": "gauge",
                "settings": {
                    "title": "Temperature",
                    "value": "datasources[\"temperatureMessageTopic\"]",
                    "units": "Fahrenheit",
                    "min_value": 0,
                    "max_value": "400"
                }
            }, {
                "type": "novi_input",
                "settings": {
                    "sectionTitle": "Input Temperature",
                    "inputType": "text",
                    "value": "datasources[\"temperatureMessageTopic\"]",
                    "size": "regular",
                    "inputName": "Input-Temperature"
                }
            }]
        }],
        "datasources": [{
            "name": "dialMessageTopic",
            "type": "messageTopic",
            "settings": {
                "topic_name": "device/dial1"
            }
        }, {
            "name": "mobileMessageTopic",
            "type": "messageTopic",
            "settings": {
                "topic_name": "device/mobile1"
            }
        }, {
            "name": "temperatureMessageTopic",
            "type": "messageTopic",
            "settings": {
                "topic_name": "device/temperatureSensor"
            }
        }],
        "columns": 3
    }
}
